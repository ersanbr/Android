<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#111"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="55sp"
            android:background="#dddddd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#222"
        android:padding="10dp">
        <Button
            android:text="C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="25sp"
            android:onClick="btnCClick"
            android:id="@+id/btnC"/>

        <Button
            android:text="Del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="25sp"
            android:onClick="btnApagarClick"
            android:id="@+id/btnApagar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#333"
        android:padding="10dp">
        <Button
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn7Click"
            android:id="@+id/btn7"/>

        <Button
            android:text="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn8Click"
            android:id="@+id/btn8"/>

        <Button
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn9Click"
            android:id="@+id/btn9"/>
        <Button
            android:text="/"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btnDivisaoClick"
            android:id="@+id/btnDividir"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#444"
        android:padding="10dp">
        <Button
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn4Click"
            android:id="@+id/btn4"/>

        <Button
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn5Click"
            android:id="@+id/btn5"/>

        <Button
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn6Click"
            android:id="@+id/btn6"/>

        <Button
            android:text="*"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btnMultiplicacaoClick"
            android:id="@+id/btnMultiplicar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#555"
        android:padding="10dp">
        <Button
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn1Click"
            android:id="@+id/btn1" />

        <Button
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn2Click"
            android:id="@+id/btn2" />

        <Button
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn3Click"
            android:id="@+id/btn3" />

        <Button
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btnSubtracaoClick"
            android:id="@+id/btnSubtrair" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#666"
        android:padding="10dp">

        <Button
            android:text="."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btnPontoClick"
            android:id="@+id/btnPonto"/>

        <Button
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btn0Click"
            android:id="@+id/btn0" />

        <Button
            android:text="="
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btnIgualClick"
            android:id="@+id/btnIgual"/>

        <Button
            android:text="+"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="btnAdicaoClick"
            android:id="@+id/btnAdicionar"/>

    </LinearLayout>

</LinearLayout>
