<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/imagem1"
            android:id="@+id/imgCifrao"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="25sp"
            android:inputType="numberDecimal"
            android:hint="Digite aqui o valor em R$"
            android:textAlignment="center"
            android:backgroundTint="#fff"
            android:id="@+id/edtValorAConverter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:text="DÃ³lar:"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="Valor Convertido"
            android:textAlignment="center"
            android:id="@+id/txtDolar"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:text="Euro:"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="Valor Convertido"
            android:textAlignment="center"
            android:id="@+id/txtEuro"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:text="Pesos Argentinos:"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="Valor Convertido"
            android:textAlignment="center"
            android:id="@+id/txtPeso"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">
        <Button
            android:text="CONVERTER"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="btnConverter"
            android:id="@+id/btnConverter"/>
        <Button
            android:text="Limpar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="btnLimpar"
            android:id="@+id/btnLimpar"/>

    </LinearLayout>

</LinearLayout>


